{{!< default}}

<article class="tool-page {{post_class}}">
    {{!-- En-tête de l'outil --}}
    <header class="tool-header">
        <div class="tool-header-container">
            <div class="tool-main-info">
                {{#if feature_image}}
                <div class="tool-large-icon">
                    <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="tool-large-icon-img">
                </div>
                {{/if}}
                <div class="tool-details">
                    <div class="tool-breadcrumb">
                        <a href="{{@site.url}}">Accueil</a>
                        <span>/</span>
                        {{#if primary_tag}}
                        <a href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                        <span>/</span>
                        {{/if}}
                        <span>{{title}}</span>
                    </div>
                    
                    <h1 class="tool-title">{{title}}</h1>
                    {{#if excerpt}}
                    <p class="tool-subtitle">{{excerpt}}</p>
                    {{/if}}
                    
                    {{!-- Métadonnées de l'outil --}}
                    <div class="tool-metadata">
                        {{#if primary_tag}}
                        <div class="metadata-item">
                            <span class="metadata-label">Catégorie:</span>
                            <a href="{{primary_tag.url}}" class="category-link">{{primary_tag.name}}</a>
                        </div>
                        {{/if}}
                        
                        <div class="metadata-item">
                            <span class="metadata-label">Dernière mise à jour:</span>
                            <time datetime="{{date updated_at format="YYYY-MM-DD"}}">{{date updated_at format="DD MMMM YYYY"}}</time>
                        </div>
                        
                        {{#has tag="gratuit,freemium,payant"}}
                        <div class="metadata-item">
                            <span class="metadata-label">Tarif:</span>
                            {{#has tag="gratuit"}}<span class="pricing-badge free">Gratuit</span>{{/has}}
                            {{#has tag="freemium"}}<span class="pricing-badge freemium">Freemium</span>{{/has}}
                            {{#has tag="payant"}}<span class="pricing-badge paid">Payant</span>{{/has}}
                        </div>
                        {{/has}}
                    </div>
                    
                    <div class="tool-meta">
                        <div class="tool-tabs">
                            <button class="tab-btn active" data-tab="overview">Aperçu</button>
                            <button class="tab-btn" data-tab="features">Fonctionnalités</button>
                            <button class="tab-btn" data-tab="pricing">Tarifs</button>
                            <button class="tab-btn" data-tab="alternatives">Alternatives</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="tool-sidebar">
                {{#has tag="essai-gratuit"}}
                <div class="trial-badge">
                    <span class="trial-text">✨ Essai gratuit disponible</span>
                </div>
                {{/has}}
                
                <div class="tool-platforms">
                    <h4>Plateformes {{title}}</h4>
                    <div class="platform-icons">
                        {{#has tag="mac"}}
                        <div class="platform-icon mac">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M12.152 6.896c-.948 0-2.415-1.078-3.96-1.04-2.04.027-3.91 1.183-4.961 3.014-2.117 3.675-.546 9.103 1.519 12.09 1.013 1.454 2.208 3.09 3.792 3.039 1.52-.065 2.09-.987 3.935-.987 1.831 0 2.35.987 3.96.948 1.637-.026 2.676-1.48 3.676-2.948 1.156-1.688 1.636-3.325 1.662-3.415-.039-.013-3.182-1.221-3.22-4.857-.026-3.04 2.48-4.494 2.597-4.559-1.429-2.09-3.623-2.324-4.39-2.376-2-.156-3.675 1.09-4.61 1.09z" fill="currentColor"/>
                                <path d="M15.53 3.83c.843-1.012 1.4-2.427 1.245-3.83-1.207.052-2.662.805-3.532 1.818-.78.896-1.454 2.338-1.273 3.714 1.338.104 2.715-.688 3.559-1.701z" fill="currentColor"/>
                            </svg>
                            <span>Mac</span>
                        </div>
                        {{/has}}
                        {{#has tag="windows"}}
                        <div class="platform-icon windows">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <path d="M3 5.45L9.17 4.5v6.13H3v-5.18zm6.17 6.13v6.13L3 16.55v-5.18h6.17zm1.79 0H21v5.18L10.96 18v-6.42zm0-6.13V11H21V5.45L10.96 3.8z" fill="currentColor"/>
                            </svg>
                            <span>Windows</span>
                        </div>
                        {{/has}}
                        {{#has tag="web"}}
                        <div class="platform-icon web">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                                <line x1="2" y1="12" x2="22" y2="12" stroke="currentColor" stroke-width="2"/>
