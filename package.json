{
  "name": "royaume",
  "description": "Thème Ghost moderne pour plateforme d'outils entrepreneurs",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "Royaume Team",
    "email": "contact@royaume.com"
  },
  "keywords": [
    "ghost",
    "theme",
    "tools",
    "entrepreneurs",
    "business"
  ],
  "config": {
    "posts_per_page": 12,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "site_title": {
        "type": "text",
        "default": "Royaume",
        "group": "homepage",
        "description": "Titre principal du site"
      },
      "site_tagline": {
        "type": "text",
        "default": "Découvrez les meilleurs outils pour entrepreneurs",
        "group": "homepage",
        "description": "Sous-titre de la page d'accueil"
      },
      "primary_color": {
        "type": "color",
        "default": "#6366F1",
        "group": "brand",
        "description": "Couleur principale du thème"
      },
      "accent_color": {
        "type": "color",
        "default": "#F59E0B",
        "group": "brand",
        "description": "Couleur d'accent"
      },
      "partner_button_text": {
        "type": "text",
        "default": "Devenir Partenaire",
        "group": "navigation",
        "description": "Texte du bouton partenaire"
      },
      "partner_button_url": {
        "type": "url",
        "default": "/contact",
        "group": "navigation",
        "description": "URL du bouton partenaire"
      },
      "hero_tool_slug": {
        "type": "text",
        "default": "zapier",
        "group": "homepage",
        "description": "Slug de l'outil à mettre en avant (2x taille)"
      },
      "footer_text": {
        "type": "text",
        "default": "© 2025 Royaume. Tous droits réservés.",
        "group": "site_wide",
        "description": "Texte du footer"
      },
      "show_search": {
        "type": "boolean",
        "default": true,
        "group": "features",
        "description": "Afficher la barre de recherche"
      },
      "enable_animations": {
        "type": "boolean",
        "default": true,
        "group": "features",
        "description": "Activer les animations"
      },
      "tools_per_page": {
        "type": "select",
        "options": ["6", "9", "12", "15", "18"],
        "default": "12",
        "group": "homepage",
        "description": "Nombre d'outils par page"
      },
      "guide_title": {
        "type": "text",
        "default": "Guide Gratuit des Outils Indispensables",
        "group": "guide_section",
        "description": "Titre de la section guide"
      },
      "guide_description": {
        "type": "textarea",
        "default": "Obtenez le PDF gratuit et le rapport sur comment choisir les meilleurs outils pour 2025 et au-delà. Découvrez plus de 10 ans d'expertise condensés en un PDF.",
        "group": "guide_section",
        "description": "Description de la section guide"
      },
      "guide_url": {
        "type": "url",
        "default": "/guide-gratuit",
        "group": "guide_section",
        "description": "URL du guide gratuit"
      }
    }
  }
}