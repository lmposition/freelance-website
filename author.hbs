{{!< default}}

<div class="author-page">
    <header class="author-header">
        <div class="author-header-container">
            {{#if profile_image}}
            <div class="author-avatar">
                <img src="{{img_url profile_image size="l"}}" alt="{{name}}">
            </div>
            {{/if}}
            <div class="author-info">
                <h1 class="author-name">{{name}}</h1>
                {{#if bio}}
                <p class="author-bio">{{bio}}</p>
                {{/if}}
                <div class="author-meta">
                    <span class="posts-count">{{plural ../pagination.total empty='Aucun article' singular='% article' plural='% articles'}}</span>
                    {{#if website}}
                    <a href="{{website}}" class="author-website" target="_blank" rel="noopener">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                            <path d="M18 13V19C18 19.5304 17.7893 20.0391 17.4142 20.4142C17.0391 20.7893 16.5304 21 16 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V8C3 7.46957 3.21071 6.96086 3.58579 6.58579C3.96086 6.21071 4.46957 6 5 6H12" stroke="currentColor" stroke-width="2"/>
                            <path d="M15 3H21V9" stroke="currentColor" stroke-width="2"/>
                            <path d="M10 14L21 3" stroke="currentColor" stroke-width="2"/>
                        </svg>
                        Site web
                    </a>
                    {{/if}}
                </div>
            </div>
        </div>
    </header>

    <section class="author-content">
        <div class="author-posts">
            <h2>Articles de {{name}}</h2>
            <div class="posts-grid">
                {{#foreach posts}}
                <article class="post-card">
                    {{#if feature_image}}
                    <div class="post-image">
                        <a href="{{url}}">
                            <img src="{{img_url feature_image size="m"}}" alt="{{title}}">
                        </a>
                    </div>
                    {{/if}}
                    <div class="post-content">
                        <h3 class="post-title">
                            <a href="{{url}}">{{title}}</a>
                        </h3>
                        {{#if excerpt}}
                        <p class="post-excerpt">{{excerpt}}</p>
                        {{/if}}
                        <div class="post-meta">
                            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                            {{#if primary_tag}}
                            <span class="post-tag">{{primary_tag.name}}</span>
                            {{/if}}
                        </div>
                    </div>
                </article>
                {{/foreach}}
            </div>
            
            {{pagination}}
        </div>
    </section>
</div>