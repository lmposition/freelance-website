<article class="tool-hero-card" data-tool-id="{{id}}">
    <div class="hero-card-badge">Recommandé</div>
    
    <div class="hero-card-content">
        <div class="hero-card-header">
            {{#if feature_image}}
            <div class="hero-tool-icon">
                <img src="{{feature_image}}" alt="{{title}}" class="hero-tool-icon-img">
            </div>
            {{/if}}
            <div class="hero-tool-info">
                <h2 class="hero-tool-name">{{title}}</h2>
                {{#if custom_excerpt}}
                <p class="hero-tool-description">{{custom_excerpt}}</p>
                {{/if}}
            </div>
        </div>
        
        <div class="hero-card-actions">
            <a href="{{url}}" class="btn btn-primary btn-large">
                Visiter {{title}}
            </a>
            <button class="btn btn-icon btn-large" data-bookmark="{{id}}">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                    <path d="M19 21L12 16L5 21V5C5 4.46957 5.21071 3.96086 5.58579 3.58579C5.96086 3.21071 6.46957 3 7 3H17C17.5304 3 18.0391 3.21071 18.4142 3.58579C18.7893 3.96086 19 4.46957 19 5V21Z" stroke="currentColor" stroke-width="2"/>
                </svg>
            </button>
        </div>
    </div>
    
    <div class="hero-card-preview">
        {{#if feature_image}}
        <img src="{{feature_image}}" alt="Aperçu de {{title}}" class="hero-preview-img">
        {{/if}}
    </div>
</article>