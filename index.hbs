{{!< default}}

<div class="homepage">
    {{!-- Section Hero --}}
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">
                Chaque outil pour entrepreneurs 
                <span class="text-gradient">digne d'intérêt</span> 
                — à un clic
            </h1>
            <div class="hero-icons">
                {{!-- Icônes d'outils flottantes --}}
                <div class="floating-icon" style="--delay: 0s">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" stroke="currentColor" stroke-width="2"/>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </div>
                <div class="floating-icon" style="--delay: 0.5s">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                        <circle cx="9" cy="9" r="2" stroke="currentColor" stroke-width="2"/>
                        <path d="M21 15L16 10L5 21" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </div>
                <div class="floating-icon" style="--delay: 1s">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                        <path d="M9 19c-5 0-8-3-8-8s3-8 8-8 8 3 8 8" stroke="currentColor" stroke-width="2"/>
                        <path d="M15 12h6m-3-3l3 3-3 3" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </div>
                <div class="floating-icon" style="--delay: 1.5s">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2"/>
                        <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2"/>
                        <line x1="16" y1="13" x2="8" y2="13" stroke="currentColor" stroke-width="2"/>
                        <line x1="16" y1="17" x2="8" y2="17" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </div>
                <div class="floating-icon" style="--delay: 2s">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                        <rect x="2" y="3" width="20" height="14" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                        <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
                        <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </div>
            </div>
        </div>
    </section>
    
    {{!-- Filtres et navigation --}}
    <section class="filters-section">
        <div class="filters-container">
            <div class="filter-tabs">
                <button class="filter-tab active" data-filter="popular">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                        <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor"/>
                    </svg>
                    Les plus populaires
                </button>
                <button class="filter-tab" data-filter="new">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                        <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    Nouveautés
                </button>
                <button class="filter-tab" data-filter="categories">
                    Catégories <span class="filter-count">+</span>
                </button>
                <button class="filter-tab" data-filter="platform">
                    Plateforme <span class="filter-count">+</span>
                </button>
                <button class="filter-tab" data-filter="pricing">
                    Tarifs <span class="filter-count">+</span>
                </button>
                <button class="filter-tab" data-filter="industry">
                    Secteur <span class="filter-count">+</span>
                </button>
            </div>
            
            <div class="results-count">
                <span data-results-count>{{pagination.total}}</span> résultats
            </div>
        </div>
    </section>
    
    {{!-- Grille d'outils --}}
    <section class="tools-grid-section">
        <div class="tools-container">
            {{!-- Outil mis en avant (2x taille) --}}
            {{#get "posts" filter="slug:{{@custom.hero_tool_slug}}" limit="1"}}
                {{#foreach posts}}
                    {{> tool-hero-card}}
                {{/foreach}}
            {{/get}}
            
            {{!-- Outils normaux --}}
            {{#get "posts" filter="tag:outil+slug:-{{@custom.hero_tool_slug}}" limit="{{@custom.tools_per_page}}"}}
                {{#foreach posts}}
                    {{> tool-card}}
                {{/foreach}}
            {{/get}}
        </div>
        
        {{!-- Pagination --}}
        <div class="pagination-container">
            {{#if pagination.next}}
            <button class="btn btn-secondary load-more" data-load-more data-next="{{pagination.next}}">
                Charger plus d'outils
            </button>
            {{/if}}
        </div>
    </section>
    
    {{!-- Guide gratuit --}}
    <section class="guide-section">
        <div class="guide-card">
            <div class="guide-content">
                <h2 class="guide-title">{{@custom.guide_title}}</h2>
                <p class="guide-description">{{@custom.guide_description}}</p>
                <a href="{{@custom.guide_url}}" class="btn btn-accent guide-download">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                        <path d="M21 15V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V15" stroke="currentColor" stroke-width="2"/>
                        <path d="M7 10L12 15L17 10" stroke="currentColor" stroke-width="2"/>
                        <path d="M12 15V3" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    Télécharger le Guide Gratuit
                </a>
            </div>
            <div class="guide-icons">
                <div class="guide-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </div>
                <div class="guide-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                        <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </div>
                <div class="guide-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2"/>
                    </svg>
                </div>
            </div>
        </div>
    </section>

    {{!-- Section outils sponsorisés --}}
    <section class="sponsored-tools">
        <div class="sponsored-container">
            <h2>Outils Recommandés</h2>
            <div class="sponsored-grid">
                {{#get "posts" filter="tag:sponsorise" limit="3"}}
                    {{#foreach posts}}
                        <article class="sponsored-tool">
                            <div class="sponsored-badge">Sponsorisé</div>
                            <div class="sponsored-content">
                                {{#if feature_image}}
                                <div class="sponsored-icon">
                                    <img src="{{img_url feature_image size="s"}}" alt="{{title}}">
                                </div>
                                {{/if}}
                                <div class="sponsored-info">
                                    <h3>{{title}}</h3>
                                    <p>{{excerpt}}</p>
                                    <a href="{{url}}" class="btn btn-primary">Visiter {{title}}</a>
                                </div>
                            </div>
                        </article>
                    {{/foreach}}
                {{/get}}
            </div>
        </div>
    </section>
</div>